{
    "manifest_version": 2,
    "name": "Glo capture",
    "version": "1.0",

    "description": "Create Glo issues from the current page",
    "homepage_url": "https://github.com",
    "icons": {
        "16": "images/kraken16.png",
        "32": "images/kraken32.png",
        "64": "images/kraken64.png",
        "128": "images/kraken128.png"
    },

    "permissions": [
        "tabs",
        "activeTab",
        "<all_urls>",
        "storage"
    ],

    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/kraken16.png",
            "32": "images/kraken32.png",
            "64": "images/kraken64.png",
            "128": "images/kraken128.png"
        }
    }
}